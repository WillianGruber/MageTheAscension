<MudCard Elevation="3" Class="rounded-lg">
    @if (Title != null)
    {
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h5" Align="Align.Center">@Title</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    }
    <MudCardContent>
        @foreach (Characteristic characteristic in Characteristics!)
        {
            <Rating Label="@characteristic.Label" @bind-Text="@characteristic.Text" @bind-Value="@characteristic.Value" />
        }
    </MudCardContent>
</MudCard>
