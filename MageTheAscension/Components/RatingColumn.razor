<MudCard Elevation="3" Class="rounded-lg mt-2">
    @if (!string.IsNullOrEmpty(Title))
    {
        <MudCardHeader Class="pb-0">
            <CardHeaderContent>
                <MudText Typo="Typo.h5" Align="Align.Center">@Title</MudText>
            </CardHeaderContent>
        </MudCardHeader>
    }
    <MudCardContent>
        @foreach (Characteristic characteristic in Characteristics!)
        {
            <Rating Label="@characteristic.Label" @bind-Text="@characteristic.Text" @bind-Value="@characteristic.Value" MaxValue="@characteristic.MaxValue" />
        }
    </MudCardContent>
</MudCard>
