<MudGrid Spacing="1" Justify="Justify.SpaceBetween" Class="d-flex align-center">
    @if (Label != null)
    {
        <MudItem xs="2">
            <MudText>
                @Label
            </MudText>
        </MudItem>
    }
    <MudItem xs=@( Label == null ? 9 : 7 )>
        <MudInput FullWidth="true" Margin="Margin.None" Class="d-flex flex-grow-1" @bind-Value=@Text />
    </MudItem>
    <MudItem xs="3">
        <MudRating Class="d-flex justify-end"
                   Size="Size.Medium"
                   Color="Color.Dark"
                   MaxValue="5"
                   FullIcon="@Icons.Material.Filled.Circle"
                   EmptyIcon="@Icons.Material.Outlined.Circle"
                   @bind-SelectedValue=@Value />
    </MudItem>
</MudGrid>