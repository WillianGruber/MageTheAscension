<MudGrid Spacing="1" Justify="Justify.SpaceBetween" Class="d-flex align-center">
    @if (Label != null)
    {
        <MudItem xs="3">
            <MudText>
                @Label
            </MudText>
        </MudItem>
    }
    @if (Text != null)
    {
        <MudItem xs=@( Label == null || Value == null ? 9 : 6 )>
            <MudInput FullWidth="true" Margin="Margin.None" Class="d-flex flex-grow-1" @bind-Value=@Text />
        </MudItem>
    }
    @if (Value != null)
    {
        <MudItem xs=@( Label == null && Text == null ? 12 : 3 )>
            <MudRating Class="@( Label != null || Text != null ? "d-flex justify-end" : "d-flex justify-center gap-x-4" )"
                   Size="Size.Medium"
                   Color="Color.Dark"
                   MaxValue="@(MaxValue.GetValueOrDefault())"
                   FullIcon="@Icons.Material.Filled.Circle"
                   EmptyIcon="@Icons.Material.Outlined.Circle"
                   SelectedValue="@(Value.GetValueOrDefault())"
                   SelectedValueChanged="@(value => Value = value)" />
        </MudItem>
    }
</MudGrid>