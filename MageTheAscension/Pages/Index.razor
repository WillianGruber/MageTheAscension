@page "/"

<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <!-- #region Header -->
    <MudCard Elevation="0">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h3" Align="Align.Center">Mage The Ascension</MudText>
                <MudText Typo="Typo.h5" Align="Align.Center" GutterBottom="true">20th Anniversary Edition</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid Spacing="1">
                <MudItem xs="4">
                    <RatingColumn Characteristics="@Sheet.Header.GetRange(0, 3)" />
                </MudItem>
                <MudItem xs="4">
                    <RatingColumn Characteristics="@Sheet.Header.GetRange(0, 3)" />
                </MudItem>
                <MudItem xs="4">
                    <RatingColumn Characteristics="@Sheet.Header.GetRange(0, 3)" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
    <!-- #endregion Header -->
    <!-- #region Attributes -->
    <MudCard Elevation="0">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h4" Align="Align.Center">Attributes</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid Spacing="1">
                <MudItem xs="4">
                    <RatingColumn Title="Physical" Characteristics="@Sheet.Physical" />
                </MudItem>
                <MudItem xs="4">
                    <RatingColumn Title="Social" Characteristics="@Sheet.Social" />
                </MudItem>
                <MudItem xs="4">
                    <RatingColumn Title="Mental" Characteristics="@Sheet.Mental" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
    <!-- #endregion Attributes -->
    <!-- #region Abilities -->
    <MudCard Elevation="0">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h4" Align="Align.Center">Abilities</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid Spacing="1">
                <MudItem xs="4">
                    <RatingColumn Title="Talents" Characteristics="@Sheet.Talents" />
                </MudItem>
                <MudItem xs="4">
                    <RatingColumn Title="Skills" Characteristics="@Sheet.Skills" />
                </MudItem>
                <MudItem xs="4">
                    <RatingColumn Title="Knowledges" Characteristics="@Sheet.Knowledges" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
    <!-- #endregion Abilities -->
    <!-- #region Spheres -->
    <MudCard Elevation="0">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h4" Align="Align.Center">Spheres</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid Spacing="1">
                <MudItem xs="4">
                    <RatingColumn Characteristics="@Sheet.Spheres.GetRange(0, 3)" />
                </MudItem>
                <MudItem xs="4">
                    <RatingColumn Characteristics="@Sheet.Spheres.GetRange(3, 3)" />
                </MudItem>
                <MudItem xs="4">
                    <RatingColumn Characteristics="@Sheet.Spheres.GetRange(6, 3)" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
    <!-- #endregion Spheres -->

</MudContainer>