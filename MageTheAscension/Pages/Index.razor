                            <Rating Label="@nameof(Sheet.Law)" Text="" @bind-Value=@Sheet.Law />
                            <Rating Label="@nameof(Sheet.Medicine)" Text="" @bind-Value=@Sheet.Medicine />
                            <Rating Label="@nameof(Sheet.Occult)" Text="" @bind-Value=@Sheet.Occult />
                            <Rating Label="@nameof(Sheet.Politics)" Text="" @bind-Value=@Sheet.Politics />
                            <Rating Label="@nameof(Sheet.Science)" Text="" @bind-Value=@Sheet.Science />
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
    <!-- #endregion Abilities -->
    <!-- #region Spheres -->
    <MudCard Elevation="25" Class="rounded-lg pb-4">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h4" Align="Align.Center">Spheres</MudText>
