                            <CardHeaderContent>
                                <MudText Typo="Typo.h5" Align="Align.Center">Skills</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <Rating Label="@nameof(Sheet.Crafts)" Text="" @bind-Value=@Sheet.Crafts />
