                            <Rating Label="@nameof(Sheet.Technology)" Text="" @bind-Value=@Sheet.Technology />
                        </MudCardContent>
                    </MudCard>
                </MudItem>
                <MudItem xs="4">
                    <MudCard Elevation="25" Class="rounded-lg pb-4">
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudText Typo="Typo.h5" Align="Align.Center">Knowledges</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <Rating Label="@nameof(Sheet.Academics)" Text="" @bind-Value=@Sheet.Academics />
                            <Rating Label="@nameof(Sheet.Computer)" Text="" @bind-Value=@Sheet.Computer />
                            <Rating Label="@nameof(Sheet.Cosmology)" Text="" @bind-Value=@Sheet.Cosmology />
