@page "/"

<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <MudText Typo="Typo.h3" Align="Align.Center">Mage The Ascension</MudText>
    <MudText Typo="Typo.h5" Align="Align.Center" GutterBottom="true">20th Anniversary Edition</MudText>

    <!-- #region Attributes -->
    <MudCard Elevation="25" Class="rounded-lg pb-4">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h4" Align="Align.Center">Attributes</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid Spacing="1">
                <MudItem xs="4">
                    <MudCard Elevation="25" Class="rounded-lg pb-4">
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudText Typo="Typo.h5" Align="Align.Center">Physical</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <Rating Label="@nameof(Sheet.Strength)" Text="" @bind-Value=@Sheet.Strength />
                            <Rating Label="@nameof(Sheet.Dexterity)" Text="" @bind-Value=@Sheet.Dexterity />
                            <Rating Label="@nameof(Sheet.Stamina)" Text="" @bind-Value=@Sheet.Stamina />
                        </MudCardContent>
                    </MudCard>
                </MudItem>
                <MudItem xs="4">
                    <MudCard Elevation="25" Class="rounded-lg pb-4">
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudText Typo="Typo.h5" Align="Align.Center">Social</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <Rating Label="@nameof(Sheet.Charisma)" Text="" @bind-Value=@Sheet.Charisma />
                            <Rating Label="@nameof(Sheet.Manipulation)" Text="" @bind-Value=@Sheet.Manipulation />
                            <Rating Label="@nameof(Sheet.Appearance)" Text="" @bind-Value=@Sheet.Appearance />
                        </MudCardContent>
                    </MudCard>
                </MudItem>
                <MudItem xs="4">
                    <MudCard Elevation="25" Class="rounded-lg pb-4">
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudText Typo="Typo.h5" Align="Align.Center">Mental</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <Rating Label="@nameof(Sheet.Perception)" Text="" @bind-Value=@Sheet.Perception />
                            <Rating Label="@nameof(Sheet.Intelligence)" Text="" @bind-Value=@Sheet.Intelligence />
                            <Rating Label="@nameof(Sheet.Wits)" Text="" @bind-Value=@Sheet.Wits />
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
    <!-- #endregion Attributes -->
    <!-- #region Abilities -->
    <MudCard Elevation="25" Class="rounded-lg pb-4">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h4" Align="Align.Center">Abilities</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid Spacing="1">
                <MudItem xs="4">
                    <MudCard Elevation="25" Class="rounded-lg pb-4">
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudText Typo="Typo.h5" Align="Align.Center">Talents</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <Rating Label="@nameof(Sheet.Alertness)" Text="" @bind-Value=@Sheet.Alertness />
                            <Rating Label="@nameof(Sheet.Art)" Text="" @bind-Value=@Sheet.Art />
                            <Rating Label="@nameof(Sheet.Athletics)" Text="" @bind-Value=@Sheet.Athletics />
                            <Rating Label="@nameof(Sheet.Awareness)" Text="" @bind-Value=@Sheet.Awareness />
